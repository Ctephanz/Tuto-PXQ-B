{
  "format_version": "1.8.0", // Version du format pour les règles de spawn
  
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "minecraft:zombie", // Nom de l'entité ciblée (ici le zombie vanilla)
      "population_control": "monster"   // Groupe de spawn auquel appartient ce mob
    },

    "conditions": [ // Liste des conditions que Minecraft va vérifier pour spawn le mob
      {
        "minecraft:spawns_on_surface": {}, // Autorise le spawn à la surface (ex: plaines, collines)
        
        "minecraft:spawns_underground": {}, // Autorise le spawn sous terre (grottes, mines)
        
        "minecraft:brightness_filter": { // Filtre selon la lumière ambiante
          "min": 0,    // Luminosité minimum (0 = complètement noir)
          "max": 7,    // Luminosité maximum (7 ou moins pour les mobs hostiles)
          "adjust_for_weather": true // Si true, la pluie réduit la luminosité et peut déclencher le spawn
        },

        "minecraft:difficulty_filter": { // Filtre basé sur la difficulté du monde
          "min": "easy",  // Minimum = easy
          "max": "hard"   // Maximum = hard
        },

        "minecraft:weight": { // Poids de spawn (probabilité par rapport aux autres mobs)
          "default": 100 // Plus le chiffre est grand, plus il a de chances de spawn
        },

        "minecraft:herd": { // Taille du groupe qui apparaît en même temps
          "min_size": 2, // Minimum 2 zombies
          "max_size": 4  // Maximum 4 zombies
        },

        "minecraft:permute_type": [ // Variantes possibles de l'entité
          {
            "weight": 95 // 95% du temps = zombie normal
          },
          {
            "weight": 5, // 5% du temps = zombie villageois
            "entity_type": "minecraft:zombie_villager_v2"
          }
        ],

        "minecraft:biome_filter": { // Filtre selon le biome
          "test": "has_biome_tag",  // Teste si le biome a un tag particulier
          "operator": "==",         // Opérateur de comparaison
          "value": "monster"        // Nom du tag requis (ici: biomes où les monstres spawnent)
        }
      }
    ]
  }
}
